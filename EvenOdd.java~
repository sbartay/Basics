import javax.swing.JOptionPane;
 
public class EvenOdd
{
    public static void main(String[]args)
    {
    String number = " ";
    number = JOptionPane.showInputDialog("Enter integer, enter -1 to quit");
     
    boolean ans;
    int n = 0;
    ans =isEven(n);
     
    String messaget = "";
    messaget = messaget + String.format("This number is even");
    String messagef = "";
    messagef = messagef + String.format("This number is odd");
     
    JOptionPane.showMessageDialog(null, ans);
    }
     
    public static boolean isEven(int integer)
    {
        integer = 0;
        while (integer != -1)
        {
            if (integer % 2 == 0)
                return true;
            else
                return false;
        }
        integer = 0;
    } 
}